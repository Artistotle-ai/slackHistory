{
  "name": "mnemosyne-functions",
  "version": "1.0.0",
  "private": true,
  "description": "Mnemosyne Lambda functions monorepo",
  "scripts": {
    "install:all": "npm install && cd slack-shared && npm install && cd ../message-listener && npm install && cd ../oauth-callback && npm install && cd ../file-processor && npm install",
    "build:shared": "cd slack-shared && npm run build",
    "build:listener": "cd message-listener && npm run build",
    "build:callback": "cd oauth-callback && npm run build",
    "build:processor": "cd file-processor && npm run build",
    "build:all": "npm run build:shared && npm run build:listener && npm run build:callback && npm run build:processor",
    "watch:shared": "cd slack-shared && npm run watch",
    "watch:listener": "cd message-listener && npm run watch",
    "watch:callback": "cd oauth-callback && npm run watch",
    "watch:processor": "cd file-processor && npm run watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --coverage --ci",
    "test:message-listener": "cd message-listener && npm test",
    "test:file-processor": "cd file-processor && npm test",
    "test:oauth-callback": "cd oauth-callback && npm test",
    "clean": "find . -name '*.js' -o -name '*.d.ts' | grep -v node_modules | grep -v cdk.out | xargs rm -f 2>/dev/null || true"
  },
  "workspaces": [
    "slack-shared",
    "message-listener",
    "oauth-callback",
    "file-processor"
  ],
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/node": "^22.0.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.5",
    "typescript": "^5.9.0"
  },
  "dependencies": {}
}
