{
  "name": "mnemosyne-file-processor",
  "version": "1.0.0",
  "description": "Slack file processor Lambda function for Mnemosyne",
  "main": "dist/index.js",
  "scripts": {
    "build": "esbuild src/index.ts --bundle --platform=node --target=node20 --format=cjs --outfile=dist/index.js --external:@aws-sdk/* --minify",
    "build:dev": "tsc",
    "test": "jest --passWithNoTests",
    "watch": "tsc -w"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.490.0",
    "@aws-sdk/util-dynamodb": "^3.490.0",
    "mnemosyne-slack-shared": "file:../slack-shared"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.130",
    "@types/node": "^22.0.0",
    "@types/jest": "^29.5.12",
    "esbuild": "^0.19.0",
    "typescript": "^5.6.2",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.5"
  }
}
