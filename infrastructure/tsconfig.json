{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    // CDK requires CommonJS modules
    "module": "commonjs",
    "moduleResolution": "node",
    "declaration": true,
    "types": ["node"],
    // Infrastructure may have unused parameters in CDK patterns
    "noUnusedParameters": false,
    // CDK requires experimental decorators for constructs
    "strictPropertyInitialization": false,
    "isolatedModules": true
  },
  "exclude": ["node_modules", "cdk.out"]
}
