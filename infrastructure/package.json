{
  "name": "mnemosyne-infrastructure",
  "version": "0.1.0",
  "bin": {
    "infra": "bin/infra.js"
  },
  "scripts": {
    "clean": "find . -name '*.js' -o -name '*.d.ts' | grep -v node_modules | grep -v cdk.out | xargs rm -f 2>/dev/null || true",
    "build": "npm run clean && tsc",
    "watch": "tsc -w",
    "cdk": "cdk"
  },
  "devDependencies": {
    "@types/node": "^22.18.13",
    "aws-cdk": "2.1031.1",
    "aws-cdk-lib": "^2.221.1",
    "ts-node": "^10.9.2",
    "typescript": "~5.6.2"
  },
  "dependencies": {
    "constructs": "^10.0.0",
    "source-map-support": "^0.5.21"
  }
}
